%% Function
%% Establece un nuevo enviroment
%% 
%% \NewEnvBoxPictBoxGlobal[PreTitleName=BoxPictBoxPre]{BoxPictBox}{BoxPictBoxCount}{BoxPictBoxExt}
%% 

\makeatletter

\ifdefined\DefCtxVar
\else
\newcommand{\DefCtxVar}[3]{%
  \expandafter\def\csname #1@#2\endcsname{#3}
}
\fi

\ifdefined\DefLenCtxVar
\else
\newcommand{\DefLenCtxVar}[2]{%
  % Usar el parámetro como nombre de la variable local
    \expandafter\newlength\csname #1@#2\endcsname  
    %\@latex@warning{************** \csname #1@#2\endcsname **************}
}
\fi

\ifdefined\SetLenCtxVar
\else
\newcommand{\SetLenCtxVar}[3]{%
  % Usar el parámetro como nombre de la variable local
    \csname #1@#2\endcsname=#3
}
\fi

\ifdefined\DatCtxVar
\else
\newcommand{\DatCtxVar}[2]{%
  \csname #1@#2\endcsname
}
\fi

\ifdefined\SetCounterReferenceFormat
\else
\newcommand{\SetCounterReferenceFormat}[1]{%
  \expandafter\def\csname the#1\endcsname{\noexpand\thesection.\noexpand\arabic{#1}}
}
\fi

\newcommand{\NewEnvBoxPictBoxGlobal}[4][,]
{
\DefLenCtxVar{#2}{LeftRuleLengthDat}
\DefLenCtxVar{#2}{ThicknessLengthDat}

\DefLenCtxVar{#2}{LeftPaddingLengthDat}
\DefLenCtxVar{#2}{RightPaddingLengthDat}
\DefLenCtxVar{#2}{TopPaddingLengthDat}
\DefLenCtxVar{#2}{BottomPaddingLengthDat}

\define@key{NewEnvBoxPictBoxGlobalKeys}{CounterWith}{\DefCtxVar{#2}{CounterWithDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{BackColor}{\DefCtxVar{#2}{BackColorDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{FrameColor}{\DefCtxVar{#2}{FrameColorDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{TitleColor}{\DefCtxVar{#2}{TitleColorDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{PreTitleColor}{\DefCtxVar{#2}{PreTitleColorDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{TitleFont}{\DefCtxVar{#2}{TitleFontDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{PreTitleName}{\DefCtxVar{#2}{PreTitleNameDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{LeftRuleLength}{\SetLenCtxVar{#2}{LeftRuleLengthDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{ThicknessLength}{\SetLenCtxVar{#2}{ThicknessLengthDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{ArcLength}{\DefCtxVar{#2}{ArcLengthDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{BeforeSpaceLength}{\DefCtxVar{#2}{BeforeSpaceLengthDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{AfterSpaceLength}{\DefCtxVar{#2}{AfterSpaceLengthDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{ImageObject}{\DefCtxVar{#2}{ImageObjectDat}{##1}}
%
\define@key{NewEnvBoxPictBoxGlobalKeys}{LeftPaddingLength}{\SetLenCtxVar{#2}{LeftPaddingLengthDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{RightPaddingLength}{\SetLenCtxVar{#2}{RightPaddingLengthDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{TopPaddingLength}{\SetLenCtxVar{#2}{TopPaddingLengthDat}{##1}}
\define@key{NewEnvBoxPictBoxGlobalKeys}{BottomPaddingLength}{\SetLenCtxVar{#2}{BottomPaddingLengthDat}{##1}}



\setkeys{NewEnvBoxPictBoxGlobalKeys}{
PreTitleName=BoxPictBox,
PreTitleColor=white,
CounterWith=section,
BackColor=gray!5,
FrameColor=red!30!black,
TitleColor=red!30!black,
TitleFont=\bfseries,
LeftRuleLength=24mm,
ArcLength=0pt,
ThicknessLength=1.5pt,
BeforeSpaceLength=0pt,
AfterSpaceLength=0pt,
ImageObject={},
LeftPaddingLength=1ex,
RightPaddingLength=1ex,
TopPaddingLength=1ex,
BottomPaddingLength=1ex
}

\setkeys{NewEnvBoxPictBoxGlobalKeys}{#1}%

%% Cofigura la lista de enviroments
\NewListEnvBoxPictBox{#4}{}

%% Create a new counter that will follow tcolorbox's numbering
\newcounter{#3}[\DatCtxVar{#2}{CounterWithDat}]

% \SetCounterReferenceFormat Set format in label reference
\SetCounterReferenceFormat{#3} 

% Eliminates warning: Unknown TOC type #1#2. I'll set it for you with\MessageBreak level -1000.
\expandafter\newcommand\csname ttll@#4\endcsname{-1000}

\newtcolorbox[%
list inside=#4,
list type=#4,
auto counter,
number within=\DatCtxVar{#2}{CounterWithDat}
]%
{#2}%
[1][]%
{
  title={##1},
  breakable,pad at break=1mm,
  enhanced jigsaw,
  colback=\DatCtxVar{#2}{BackColorDat},
  colframe=\DatCtxVar{#2}{FrameColorDat},
  coltitle=\DatCtxVar{#2}{TitleColorDat},
  fonttitle=\DatCtxVar{#2}{TitleFontDat},
  detach title,
  leftrule=\DatCtxVar{#2}{LeftRuleLengthDat},
  toprule=\DatCtxVar{#2}{ThicknessLengthDat}, 
  rightrule=\DatCtxVar{#2}{ThicknessLengthDat}, 
  bottomrule=\DatCtxVar{#2}{ThicknessLengthDat},
  %
  left=\DatCtxVar{#2}{LeftPaddingLengthDat},
  right=\DatCtxVar{#2}{RightPaddingLengthDat},
  top=\DatCtxVar{#2}{TopPaddingLengthDat},
  bottom=\DatCtxVar{#2}{BottomPaddingLengthDat},
  %
  before={\vspace{\DatCtxVar{#2}{BeforeSpaceLengthDat}}},
  after={\vspace{\DatCtxVar{#2}{AfterSpaceLengthDat}}},
  %
  underlay unbroken and first={\node[below,text=\DatCtxVar{#2}{PreTitleColorDat},font=\DatCtxVar{#2}{TitleFontDat},align=center]
    at ([xshift=-0.5\DatCtxVar{#2}{LeftRuleLengthDat}+1.5\DatCtxVar{#2}{ThicknessLengthDat},yshift=-1mm]interior.north west) {%
    \begin{minipage}{0.98\DatCtxVar{#2}{LeftRuleLengthDat}}
    \centering
    \DatCtxVar{#2}{PreTitleNameDat}\\
    \thetcbcounter\\
    \DatCtxVar{#2}{ImageObjectDat}
    \end{minipage}
    };},
  code={
  \ifthenelse{\equal{\DatCtxVar{#2}{ArcLengthDat}}{0pt}}
    { \tcbset{sharp corners} }
    { \tcbset{arc=\DatCtxVar{#2}{ArcLengthDat}} }
  %
  \ifdefempty{\tcbtitletext}
    {
    \tcbset{list text={ \EnvBoxPictBoxFirstLetterUppercase{\DatCtxVar{#2}{PreTitleNameDat}}  }}
    }
    {%% \tcbtitle is the title write by the user
    \tcbset{list text={##1}}
    }
  %
  \ifdefempty{\tcbtitletext}
    {
    \tcbset{before upper={\addtocounter{#3}{-1}\refstepcounter{#3} \refstepcounter{#3}}}
    }
    {%% \tcbtitle is the title write by the user
    \tcbset{before upper={\addtocounter{#3}{-1}\refstepcounter{#3} \tcbtitle\par\medskip\refstepcounter{#3}}}
    }
  },
}
}



\makeatother



