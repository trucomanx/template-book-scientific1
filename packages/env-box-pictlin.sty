%% Function
%% Establece un nuevo enviroment
%% 
%% \NewEnvBoxPictLinGlobal[PreTitleName=BoxPictLinPre]{BoxPictLin}{BoxPictLinCount}{BoxPictLinExt}
%% 

\makeatletter

\ifdefined\DefCtxVar
\else
\newcommand{\DefCtxVar}[3]{%
  \expandafter\def\csname #1@#2\endcsname{#3}
}
\fi

\ifdefined\DefLenCtxVar
\else
\newcommand{\DefLenCtxVar}[2]{%
  % Usar el parámetro como nombre de la variable local
    \expandafter\newlength\csname #1@#2\endcsname  
    %\@latex@warning{************** \csname #1@#2\endcsname **************}
}
\fi

\ifdefined\SetLenCtxVar
\else
\newcommand{\SetLenCtxVar}[3]{%
  % Usar el parámetro como nombre de la variable local
    \csname #1@#2\endcsname=#3
}
\fi

\ifdefined\DatCtxVar
\else
\newcommand{\DatCtxVar}[2]{%
  \csname #1@#2\endcsname
}
\fi

\ifdefined\SetCounterReferenceFormat
\else
\newcommand{\SetCounterReferenceFormat}[1]{%
  \expandafter\def\csname the#1\endcsname{\noexpand\thesection.\noexpand\arabic{#1}}
}
\fi

\newcommand{\NewEnvBoxPictLinGlobal}[4][,]
{

\DefLenCtxVar{#2}{ImageWidthLengthDat}
\DefLenCtxVar{#2}{LeftRuleLengthDat}
\DefLenCtxVar{#2}{LeftPaddingLengthDat}
\DefLenCtxVar{#2}{RightPaddingLengthDat}
\DefLenCtxVar{#2}{TopPaddingLengthDat}
\DefLenCtxVar{#2}{BottomPaddingLengthDat}

\define@key{NewEnvBoxPictLinGlobalKeys}{CounterWith}{\DefCtxVar{#2}{CounterWithDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{BackColor}{\DefCtxVar{#2}{BackColorDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{FrameColor}{\DefCtxVar{#2}{FrameColorDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{TitleColor}{\DefCtxVar{#2}{TitleColorDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{TitleFont}{\DefCtxVar{#2}{TitleFontDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{PreTitleName}{\DefCtxVar{#2}{PreTitleNameDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{LeftRuleLength}{\SetLenCtxVar{#2}{LeftRuleLengthDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{BeforeSpaceLength}{\DefCtxVar{#2}{BeforeSpaceLengthDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{AfterSpaceLength}{\DefCtxVar{#2}{AfterSpaceLengthDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{ImageObject}{\DefCtxVar{#2}{ImageObjectDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{ImageWidthLength}{\SetLenCtxVar{#2}{ImageWidthLengthDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{PostImageObject}{\DefCtxVar{#2}{PostImageObjectDat}{##1}}
%
\define@key{NewEnvBoxPictLinGlobalKeys}{LeftPaddingLength}{\SetLenCtxVar{#2}{LeftPaddingLengthDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{RightPaddingLength}{\SetLenCtxVar{#2}{RightPaddingLengthDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{TopPaddingLength}{\SetLenCtxVar{#2}{TopPaddingLengthDat}{##1}}
\define@key{NewEnvBoxPictLinGlobalKeys}{BottomPaddingLength}{\SetLenCtxVar{#2}{BottomPaddingLengthDat}{##1}}


\setkeys{NewEnvBoxPictLinGlobalKeys}{
PreTitleName=BoxPictLin,
CounterWith=section,
BackColor=gray!10,
FrameColor=red!50!black,
TitleColor=green!50!black,
TitleFont=\bfseries,
LeftRuleLength=4pt,
BeforeSpaceLength=4pt,
AfterSpaceLength=0pt,
ImageObject={\pgfornament[color=red!50!black,width=4ex]{1}},
ImageWidthLength=4ex,
LeftPaddingLength=8pt,
RightPaddingLength=8pt,
TopPaddingLength=8pt,
BottomPaddingLength=8pt,
PostImageObject={}
}

\setkeys{NewEnvBoxPictLinGlobalKeys}{#1}%

%% Cofigura la lista de enviroments
\NewListEnvBoxPictLin{#4}{}

%% Create a new counter that will follow tcolorbox's numbering
\newcounter{#3}[\DatCtxVar{#2}{CounterWithDat}]

% \SetCounterReferenceFormat Set format in label reference
\SetCounterReferenceFormat{#3} 

% Eliminates warning: Unknown TOC type #1#2. I'll set it for you with\MessageBreak level -1000.
\expandafter\newcommand\csname ttll@#4\endcsname{-1000}

\newtcolorbox[%
list inside=#4,
list type=#4,
auto counter,
number within=\DatCtxVar{#2}{CounterWithDat}
]%
{#2}%
[1][]%
{
  title={##1},
  detach title,
  colback=\DatCtxVar{#2}{BackColorDat},
  colframe=\DatCtxVar{#2}{FrameColorDat},
  coltitle=\DatCtxVar{#2}{TitleColorDat},
  fonttitle=\DatCtxVar{#2}{TitleFontDat},
  leftrule=\DatCtxVar{#2}{LeftRuleLengthDat}, toprule=-0.05pt, rightrule=-0.05pt, bottomrule=-0.05pt,
  breakable,
  enhanced,
  sharp corners,
  before={\vspace{\DatCtxVar{#2}{BeforeSpaceLengthDat}}},
  after={\vspace{\DatCtxVar{#2}{AfterSpaceLengthDat}}},
  left=\DatCtxVar{#2}{LeftPaddingLengthDat}, 
  right=\DatCtxVar{#2}{RightPaddingLengthDat},%8pt, 
  top=\DatCtxVar{#2}{TopPaddingLengthDat},%10pt, 
  bottom=\DatCtxVar{#2}{BottomPaddingLengthDat},%4pt,
  before upper={\addtocounter{#3}{-1}\refstepcounter{#3} \refstepcounter{#3}},
  code={
  \ifdefempty{\tcbtitletext}
    {
    \tcbset{list text={ \EnvBoxPictLinFirstLetterUppercase{\DatCtxVar{#2}{PreTitleNameDat}}  }}
    }
    {%% \tcbtitle is the title write by the user
    \tcbset{list text={##1}}
    }
  },
  %
  overlay unbroken and first ={%
    \coordinate (X) at ([xshift=-0.5\DatCtxVar{#2}{ImageWidthLengthDat}]frame.north west);
    \node[rotate=0, minimum width=\DatCtxVar{#2}{ImageWidthLengthDat}, right, font=\DatCtxVar{#2}{TitleFontDat}]  at (X) 
    {%
    \begin{minipage}{\DatCtxVar{#2}{ImageWidthLengthDat}}
    \centering
    \DatCtxVar{#2}{ImageObjectDat}
    \end{minipage}
    };
    %
    %\coordinate (Y) at ([xshift=0.5\DatCtxVar{#2}{ImageWidthLengthDat}]frame.north west);
    \coordinate (Y) at ([xshift=\DatCtxVar{#2}{LeftRuleLengthDat}-4pt]frame.north west);
    \node[rotate=0, minimum width=\DatCtxVar{#2}{ImageWidthLengthDat}, right, font=\DatCtxVar{#2}{TitleFontDat}]  at (Y) 
    {%
    \hspace{\DatCtxVar{#2}{LeftPaddingLengthDat}}
    \if##1\@empty\relax\relax
    \textcolor{\DatCtxVar{#2}{TitleColorDat}}{\DatCtxVar{#2}{PostImageObjectDat}\DatCtxVar{#2}{PreTitleNameDat}\;\thetcbcounter\;:}
    \else
    \textcolor{\DatCtxVar{#2}{TitleColorDat}}{\DatCtxVar{#2}{PostImageObjectDat}\DatCtxVar{#2}{PreTitleNameDat}\;\thetcbcounter\;--\;\tcbtitle\;:}
    \fi
    };%
  },
  %
  %
  %
}
}


\makeatother



