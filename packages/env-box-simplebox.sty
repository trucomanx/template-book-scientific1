\DefLenCtxVar{#2}{AfterSpaceLength}

\define@key{NewEnvBoxSimpleBoxGlobalKeys}{Dashed}{\DefCtxVar{#2}{Dashed}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{Breakable}{\DefCtxVar{#2}{Breakable}{##1}}
