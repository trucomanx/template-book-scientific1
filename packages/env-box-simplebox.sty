%% Function
%% Establece un nuevo enviroment
%% 
%% \NewEnvBoxSimpleBoxGlobal[PreTitleName=BoxSimpleBoxPre]{BoxSimpleBox}{BoxSimpleBoxCount}{BoxSimpleBoxExt}
%% 

\makeatletter

\ifdefined\DefCtxVar
\else
\newcommand{\DefCtxVar}[3]{%
  \expandafter\def\csname #1@#2\endcsname{#3}
}
\fi

\ifdefined\DefLenCtxVar
\else
\newcommand{\DefLenCtxVar}[2]{%
  % Usar el parámetro como nombre de la variable local
    \expandafter\newlength\csname #1@#2\endcsname  
    %\@latex@warning{************** \csname #1@#2\endcsname **************}
}
\fi

\ifdefined\SetLenCtxVar
\else
\newcommand{\SetLenCtxVar}[3]{%
  % Usar el parámetro como nombre de la variable local
    \csname #1@#2\endcsname=#3
}
\fi

\ifdefined\DatCtxVar
\else
\newcommand{\DatCtxVar}[2]{%
  \csname #1@#2\endcsname
}
\fi

\ifdefined\SetCounterReferenceFormat
\else
\newcommand{\SetCounterReferenceFormat}[1]{%
  \expandafter\def\csname the#1\endcsname{\noexpand\thesection.\noexpand\arabic{#1}}
}
\fi

\newcommand{\NewEnvBoxSimpleBoxGlobal}[4][,]
{

\DefLenCtxVar{#2}{LeftPaddingLengthDat}
\DefLenCtxVar{#2}{RightPaddingLengthDat}
\DefLenCtxVar{#2}{TopPaddingLengthDat}
\DefLenCtxVar{#2}{BottomPaddingLengthDat}
\DefLenCtxVar{#2}{Thickness}
\DefLenCtxVar{#2}{ArcLengthDat}

\define@key{NewEnvBoxSimpleBoxGlobalKeys}{CounterWith}{\DefCtxVar{#2}{CounterWithDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{BackColor}{\DefCtxVar{#2}{BackColorDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{FrameColor}{\DefCtxVar{#2}{FrameColorDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{TitleFrameColor}{\DefCtxVar{#2}{TitleFrameColorDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{TitleBackColor}{\DefCtxVar{#2}{TitleBackColorDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{TitleColor}{\DefCtxVar{#2}{TitleColorDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{TitleFont}{\DefCtxVar{#2}{TitleFontDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{PreTitleName}{\DefCtxVar{#2}{PreTitleNameDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{Thickness}{\DefCtxVar{#2}{ThicknessDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{BeforeSpaceLength}{\DefCtxVar{#2}{BeforeSpaceLengthDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{AfterSpaceLength}{\DefCtxVar{#2}{AfterSpaceLengthDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{ImageObject}{\DefCtxVar{#2}{ImageObjectDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{PostImageObject}{\DefCtxVar{#2}{PostImageObjectDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{QedSymbol}{\DefCtxVar{#2}{QedSymbolDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{ShadowColor}{\DefCtxVar{#2}{ShadowColorDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{SolidShadow}{\DefCtxVar{#2}{SolidShadowDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{ArcLength}{\SetLenCtxVar{#2}{ArcLengthDat}{##1}}

%
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{LeftPaddingLength}{\SetLenCtxVar{#2}{LeftPaddingLengthDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{RightPaddingLength}{\SetLenCtxVar{#2}{RightPaddingLengthDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{TopPaddingLength}{\SetLenCtxVar{#2}{TopPaddingLengthDat}{##1}}
\define@key{NewEnvBoxSimpleBoxGlobalKeys}{BottomPaddingLength}{\SetLenCtxVar{#2}{BottomPaddingLengthDat}{##1}}


\setkeys{NewEnvBoxSimpleBoxGlobalKeys}{
PreTitleName=BoxSimpleBox,
CounterWith=section,
BackColor=red!5!white,
FrameColor=red!50!black,
TitleColor=red!50!black,
TitleFrameColor=blue!50!black,
TitleBackColor=blue!5!white,
TitleFont=\bfseries,
Thickness=1pt,
ArcLength=8pt,
BeforeSpaceLength=4pt,
AfterSpaceLength=0pt,
ImageObject={\color{red!50!black}\ding{113}},
PostImageObject=\hspace{1pt},
QedSymbol={},%% simbolo o objeto al final del enviroment {\hfill$\blacksquare$}
ShadowColor=black,
SolidShadow=false,
LeftPaddingLength=1ex,
RightPaddingLength=1ex,
TopPaddingLength=2ex,
BottomPaddingLength=1ex
}

\setkeys{NewEnvBoxSimpleBoxGlobalKeys}{#1}%

%% Cofigura la lista de enviroments
\NewListEnvBoxSimpleBox{#4}{}

%% Create a new counter that will follow tcolorbox's numbering
\newcounter{#3}[\DatCtxVar{#2}{CounterWithDat}]

% \SetCounterReferenceFormat Set format in label reference
\SetCounterReferenceFormat{#3} 

% Eliminates warning: Unknown TOC type #1#2. I'll set it for you with\MessageBreak level -1000.
\expandafter\newcommand\csname ttll@#4\endcsname{-1000}

\newtcolorbox[%
list inside=#4,
list type=#4,
auto counter,
number within=\DatCtxVar{#2}{CounterWithDat}
]%
{#2}%
[1][]%
{
  title={##1},
  detach title,
  colback=\DatCtxVar{#2}{BackColorDat},
  colframe=\DatCtxVar{#2}{FrameColorDat},
  coltitle=\DatCtxVar{#2}{TitleColorDat},
  fonttitle=\DatCtxVar{#2}{TitleFontDat},
  %
  left=\DatCtxVar{#2}{LeftPaddingLengthDat},
  right=\DatCtxVar{#2}{RightPaddingLengthDat},
  top=\DatCtxVar{#2}{TopPaddingLengthDat},
  bottom=\DatCtxVar{#2}{BottomPaddingLengthDat},
  %
  leftrule=\DatCtxVar{#2}{ThicknessDat}, 
  toprule=\DatCtxVar{#2}{ThicknessDat}, 
  rightrule=\DatCtxVar{#2}{ThicknessDat}, 
  bottomrule=\DatCtxVar{#2}{ThicknessDat},
  %
  drop shadow=\DatCtxVar{#2}{ShadowColorDat},
  enlarge top by=\topsep,
  arc=\DatCtxVar{#2}{ArcLengthDat},
overlay unbroken and first={
    \node[xshift=10pt,thick,draw=\DatCtxVar{#2}{TitleFrameColorDat},fill=\DatCtxVar{#2}{TitleBackColorDat},rounded corners,anchor=west] at (frame.north west) %
    {%
      %\ifdefempty{\tcbtitletext} 
      \if##1\@empty\relax\relax
            %\addtocounter{theoremCounter}{-1}\refstepcounter{theoremCounter}%
            \DatCtxVar{#2}{ImageObjectDat}
            \DatCtxVar{#2}{PostImageObjectDat}%
            \textcolor{\DatCtxVar{#2}{TitleColorDat}}%
            {\DatCtxVar{#2}{TitleFontDat}\DatCtxVar{#2}{PreTitleNameDat}\;\thetcbcounter} %
            %\refstepcounter{theoremCounter}
      \else
            %\addtocounter{theoremCounter}{-1}\refstepcounter{theoremCounter}%
            \DatCtxVar{#2}{ImageObjectDat}
            \DatCtxVar{#2}{PostImageObjectDat}%
            \textcolor{\DatCtxVar{#2}{TitleColorDat}}%
            {\DatCtxVar{#2}{TitleFontDat}\DatCtxVar{#2}{PreTitleNameDat}\;\thetcbcounter\;-- ##1} %
            %\refstepcounter{theoremCounter}
      \fi
    };
},
  %
  breakable,
  enhanced,
  before={\vspace{\DatCtxVar{#2}{BeforeSpaceLengthDat}}},
  after={\vspace{\DatCtxVar{#2}{AfterSpaceLengthDat}}},
  after upper={\DatCtxVar{#2}{QedSymbolDat}},
  code={
  \ifdefempty{\tcbtitletext}
    {
    \tcbset{list text={ \EnvBoxSimpleBoxFirstLetterUppercase{\DatCtxVar{#2}{PreTitleNameDat}}  }}
    }
    {%% \tcbtitle is the title write by the user
    \tcbset{list text={##1}}
    }
  %
  \ifdefempty{\tcbtitletext}
    {
        \tcbset{before upper={\addtocounter{#3}{-1}\refstepcounter{#3}%
         \refstepcounter{#3}}}
    }
    {%% \tcbtitle is the title write by the user
        \tcbset{before upper={\addtocounter{#3}{-1}\refstepcounter{#3}%
        \refstepcounter{#3}}}
    }
  %
  \ifthenelse{\equal{\DatCtxVar{#2}{SolidShadowDat}}{true}}
    {
    \tcbset{shadow={1mm}{-1mm}{0mm}{\DatCtxVar{#2}{ShadowColorDat}}}
    }
    {%% \tcbtitle is the title write by the user
    }
  %
  },
}
}


\makeatother



