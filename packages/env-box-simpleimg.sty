%% Function
%% Establece un nuevo enviroment
%% 
%% \NewEnvBoxSimpleImgGlobal[PreTitleName=BoxSimpleImgPre]{BoxSimpleImg}{BoxSimpleImgCount}{BoxSimpleImgExt}
%% 

\makeatletter

\ifdefined\DefCtxVar
\else
\newcommand{\DefCtxVar}[3]{%
  \expandafter\def\csname #1@#2\endcsname{#3}
}
\fi

\ifdefined\DefLenCtxVar
\else
\newcommand{\DefLenCtxVar}[2]{%
  % Usar el parámetro como nombre de la variable local
    \expandafter\newlength\csname #1@#2\endcsname  
    %\@latex@warning{************** \csname #1@#2\endcsname **************}
}
\fi

\ifdefined\SetLenCtxVar
\else
\newcommand{\SetLenCtxVar}[3]{%
  % Usar el parámetro como nombre de la variable local
    \csname #1@#2\endcsname=#3
}
\fi

\ifdefined\DatCtxVar
\else
\newcommand{\DatCtxVar}[2]{%
  \csname #1@#2\endcsname
}
\fi

\ifdefined\SetCounterReferenceFormat
\else
\newcommand{\SetCounterReferenceFormat}[1]{%
  \expandafter\def\csname the#1\endcsname{\noexpand\thesection.\noexpand\arabic{#1}}
}
\fi

\newcommand{\NewEnvBoxSimpleImgGlobal}[4][,]
{

\DefLenCtxVar{#2}{LeftPaddingLengthDat}
\DefLenCtxVar{#2}{RightPaddingLengthDat}
\DefLenCtxVar{#2}{TopPaddingLengthDat}
\DefLenCtxVar{#2}{BottomPaddingLengthDat}
\DefLenCtxVar{#2}{Thickness}

\define@key{NewEnvBoxSimpleImgGlobalKeys}{CounterWith}{\DefCtxVar{#2}{CounterWithDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{BackColor}{\DefCtxVar{#2}{BackColorDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{FrameColor}{\DefCtxVar{#2}{FrameColorDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{TitleColor}{\DefCtxVar{#2}{TitleColorDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{TitleFont}{\DefCtxVar{#2}{TitleFontDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{PreTitleName}{\DefCtxVar{#2}{PreTitleNameDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{Thickness}{\DefCtxVar{#2}{ThicknessDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{BeforeSpaceLength}{\DefCtxVar{#2}{BeforeSpaceLengthDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{AfterSpaceLength}{\DefCtxVar{#2}{AfterSpaceLengthDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{ImageObject}{\DefCtxVar{#2}{ImageObjectDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{ImageWidthLength}{\DefCtxVar{#2}{ImageWidthLengthDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{PostImageObject}{\DefCtxVar{#2}{PostImageObjectDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{QedSymbol}{\DefCtxVar{#2}{QedSymbolDat}{##1}}
%
\define@key{NewEnvBoxSimpleImgGlobalKeys}{LeftPaddingLength}{\SetLenCtxVar{#2}{LeftPaddingLengthDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{RightPaddingLength}{\SetLenCtxVar{#2}{RightPaddingLengthDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{TopPaddingLength}{\SetLenCtxVar{#2}{TopPaddingLengthDat}{##1}}
\define@key{NewEnvBoxSimpleImgGlobalKeys}{BottomPaddingLength}{\SetLenCtxVar{#2}{BottomPaddingLengthDat}{##1}}


\setkeys{NewEnvBoxSimpleImgGlobalKeys}{
PreTitleName=BoxSimpleImg,
CounterWith=section,
BackColor=white,
FrameColor=red!50!black,
TitleColor=red!50!black,
TitleFont=\bfseries,
Thickness=1pt,
BeforeSpaceLength=4pt,
AfterSpaceLength=0pt,
ImageObject={\color{red!50!black}\ding{113}},
ImageWidthLength=4ex,
PostImageObject=\hspace{1pt},
QedSymbol={},%% simbolo o objeto al final del enviroment {\hfill$\blacksquare$}
LeftPaddingLength=1ex,
RightPaddingLength=1ex,
TopPaddingLength=1ex,
BottomPaddingLength=1ex
}

\setkeys{NewEnvBoxSimpleImgGlobalKeys}{#1}%

%% Cofigura la lista de enviroments
\NewListEnvBoxSimpleImg{#4}{}

%% Create a new counter that will follow tcolorbox's numbering
\newcounter{#3}[\DatCtxVar{#2}{CounterWithDat}]

% \SetCounterReferenceFormat Set format in label reference
\SetCounterReferenceFormat{#3} 

% Eliminates warning: Unknown TOC type #1#2. I'll set it for you with\MessageBreak level -1000.
\expandafter\newcommand\csname ttll@#4\endcsname{-1000}

\newtcolorbox[%
list inside=#4,
list type=#4,
auto counter,
number within=\DatCtxVar{#2}{CounterWithDat}
]%
{#2}%
[1][]%
{
  title={##1},
  detach title,
  colback=\DatCtxVar{#2}{BackColorDat},
  colframe=\DatCtxVar{#2}{FrameColorDat},
  coltitle=\DatCtxVar{#2}{TitleColorDat},
  fonttitle=\DatCtxVar{#2}{TitleFontDat},
  %
  left=\DatCtxVar{#2}{LeftPaddingLengthDat},
  right=\DatCtxVar{#2}{RightPaddingLengthDat},
  top=\DatCtxVar{#2}{TopPaddingLengthDat},
  bottom=\DatCtxVar{#2}{BottomPaddingLengthDat},
  %
  leftrule=\DatCtxVar{#2}{ThicknessDat}, 
  toprule=\DatCtxVar{#2}{ThicknessDat}, 
  rightrule=\DatCtxVar{#2}{ThicknessDat}, 
  bottomrule=\DatCtxVar{#2}{ThicknessDat},
  %
  breakable,
  enhanced,
  arc=0mm,
  before={\vspace{\DatCtxVar{#2}{BeforeSpaceLengthDat}}},
  after={\vspace{\DatCtxVar{#2}{AfterSpaceLengthDat}}},
  after upper={\DatCtxVar{#2}{QedSymbolDat}},
  code={
  \ifdefempty{\tcbtitletext}
    {
    \tcbset{list text={ \EnvBoxSimpleImgFirstLetterUppercase{\DatCtxVar{#2}{PreTitleNameDat}}  }}
    }
    {%% \tcbtitle is the title write by the user
    \tcbset{list text={##1}}
    }
  %
  \ifdefempty{\tcbtitletext}
    {
        \tcbset{before upper={\addtocounter{#3}{-1}\refstepcounter{#3}%
        \begin{minipage}{\DatCtxVar{#2}{ImageWidthLengthDat}}
        \centering\DatCtxVar{#2}{ImageObjectDat}
        \end{minipage}% 
        \DatCtxVar{#2}{PostImageObjectDat}%
        \textcolor{\DatCtxVar{#2}{TitleColorDat}}{\DatCtxVar{#2}{TitleFontDat}\DatCtxVar{#2}{PreTitleNameDat}\;\thetcbcounter:} \refstepcounter{#3}}}
    }
    {%% \tcbtitle is the title write by the user
        \tcbset{before upper={\addtocounter{#3}{-1}\refstepcounter{#3}%
        \begin{minipage}{\DatCtxVar{#2}{ImageWidthLengthDat}}
        \centering\DatCtxVar{#2}{ImageObjectDat}
        \end{minipage}%
        \DatCtxVar{#2}{PostImageObjectDat}%
        \textcolor{\DatCtxVar{#2}{TitleColorDat}}{\DatCtxVar{#2}{TitleFontDat}\DatCtxVar{#2}{PreTitleNameDat}\;\thetcbcounter\;--\;\tcbtitle:} \refstepcounter{#3}}}
    }
  },
}
}


\makeatother



