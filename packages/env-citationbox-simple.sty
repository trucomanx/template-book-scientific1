%%%% Macros 
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% defining variable
%\newlength{\EnvCitationBoxSimpleLength}
%\setlength{\EnvCitationBoxSimpleLength}{3mm}
%
\newcommand{\EnvCitationBoxSimpleThickness}{1.5pt}
\newcommand{\SetEnvCitationBoxSimpleThickness}[1]{\renewcommand{\EnvCitationBoxSimpleThickness}{#1}}%

%% Define before space
\newcommand{\EnvCitationBoxSimpleBeforeSpace}{0pt}
\newcommand{\SetEnvCitationBoxSimpleBeforeSpace}[1]{\renewcommand{\EnvCitationBoxSimpleBeforeSpace}{#1}}%

%% Define after space
\newcommand{\EnvCitationBoxSimpleAfterSpace}{0pt}
\newcommand{\SetEnvCitationBoxSimpleAfterSpace}[1]{\renewcommand{\EnvCitationBoxSimpleAfterSpace}{#1}}%

%% Define the frame color of enviroment
\newcommand{\EnvCitationBoxSimpleFrameColor}{gray!10}
\newcommand{\SetEnvCitationBoxSimpleFrameColor}[1]{\renewcommand{\EnvCitationBoxSimpleFrameColor}{#1}}%

%% Define the backaground body color
\newcommand{\EnvCitationBoxSimpleBackColor}{gray!5}
\newcommand{\SetEnvCitationBoxSimpleBackColor}[1]{\renewcommand{\EnvCitationBoxSimpleBackColor}{#1}}%

%% Define o arco
\newcommand{\EnvCitationBoxSimpleBoxArc}{3mm}
\newcommand{\SetEnvCitationBoxSimpleBoxArc}[1]{\renewcommand{\EnvCitationBoxSimpleBoxArc}{#1}}%

%
\newcommand{\EnvCitationBoxSimpleWidth}{0.90 \linewidth}
\newcommand{\SetEnvCitationBoxSimpleWidth}[1]{\renewcommand{\EnvCitationBoxSimpleWidth}{#1}}%

%% Define the image of pretitle
%\newcommand{\EnvCitationBoxSimpleImage}{}
%\newcommand{\SetEnvCitationBoxSimpleImage}[1]{\renewcommand{\EnvCitationBoxSimpleImage}{#1}}%





%% Warning: These variables dont have \Set... method




%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newtcolorbox{citationbox}
{
  breakable,
  enhanced,
  boxrule = \EnvCitationBoxSimpleThickness,
  colback  = \EnvCitationBoxSimpleBackColor,
  colframe = \EnvCitationBoxSimpleFrameColor,
  arc      = \EnvCitationBoxSimpleBoxArc,
  before   ={\vspace{\EnvCitationBoxSimpleBeforeSpace}},
  after    ={\vspace{\EnvCitationBoxSimpleAfterSpace}},
  left skip= \linewidth-\EnvCitationBoxSimpleWidth,
  width    = \EnvCitationBoxSimpleWidth
}


