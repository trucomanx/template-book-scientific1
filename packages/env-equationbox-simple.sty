%% defining variable
%\newlength{\EnvEquationBoxSimpleLength}
%\setlength{\EnvEquationBoxSimpleLength}{3mm}
%
\newcommand{\EnvEquationBoxSimpleThickness}{1.5pt}
\newcommand{\SetEnvEquationBoxSimpleThickness}[1]{\renewcommand{\EnvEquationBoxSimpleThickness}{#1}}%

%% Define before space
\newcommand{\EnvEquationBoxSimpleBeforeSpace}{0pt}
\newcommand{\SetEnvEquationBoxSimpleBeforeSpace}[1]{\renewcommand{\EnvEquationBoxSimpleBeforeSpace}{#1}}%

%% Define after space
\newcommand{\EnvEquationBoxSimpleAfterSpace}{0pt}
\newcommand{\SetEnvEquationBoxSimpleAfterSpace}[1]{\renewcommand{\EnvEquationBoxSimpleAfterSpace}{#1}}%

%% Define the frame color of enviroment
\newcommand{\EnvEquationBoxSimpleFrameColor}{gray!10}
\newcommand{\SetEnvEquationBoxSimpleFrameColor}[1]{\renewcommand{\EnvEquationBoxSimpleFrameColor}{#1}}%

%% Define the backaground body color
\newcommand{\EnvEquationBoxSimpleBackColor}{gray!5}
\newcommand{\SetEnvEquationBoxSimpleBackColor}[1]{\renewcommand{\EnvEquationBoxSimpleBackColor}{#1}}%

%% Define o arco
\newcommand{\EnvEquationBoxSimpleBoxArc}{3mm}
\newcommand{\SetEnvEquationBoxSimpleBoxArc}[1]{\renewcommand{\EnvEquationBoxSimpleBoxArc}{#1}}%

%
\newcommand{\EnvEquationBoxSimpleWidth}{\linewidth}
\newcommand{\SetEnvEquationBoxSimpleWidth}[1]{\renewcommand{\EnvEquationBoxSimpleWidth}{#1}}%

%% Define the image of pretitle
%\newcommand{\EnvEquationBoxSimpleImage}{}
%\newcommand{\SetEnvEquationBoxSimpleImage}[1]{\renewcommand{\EnvEquationBoxSimpleImage}{#1}}%





%% Warning: These variables dont have \Set... method




%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newtcolorbox{equationbox}
{
  breakable,
  enhanced,
  boxrule = \EnvEquationBoxSimpleThickness,
  colback  = \EnvEquationBoxSimpleBackColor,
  colframe = \EnvEquationBoxSimpleFrameColor,
  arc      = \EnvEquationBoxSimpleBoxArc,
  before   ={\vspace{\EnvEquationBoxSimpleBeforeSpace}},
  after    ={\vspace{\EnvEquationBoxSimpleAfterSpace}},
  left skip= \linewidth-\EnvEquationBoxSimpleWidth,
  width    = \EnvEquationBoxSimpleWidth
}


