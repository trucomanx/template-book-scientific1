%% Create a new counter that will follow tcolorbox's numbering
%% Create a new counter that will follow tcolorbox's numbering
\newcounter{theoremCounter}[section]
\renewcommand*{\thetheoremCounter}{\noexpand\thesection.\noexpand\arabic{theoremCounter}}

\newtcolorbox[list inside=\EnvTheoremSimpleListingExt,list type=\EnvTheoremSimpleListingExt,auto counter,number within=section]%
{theorem}%
[1][]%
{
  title={#1},
  detach title,
  colback=\EnvTheoremSimpleBackColor,
  colframe=\EnvTheoremSimpleFrameColor,
  coltitle=\EnvTheoremSimpleTitleColor,
  fonttitle=\EnvTheoremSimpleTitleFont,
  leftrule=\EnvTheoremSimpleLeftRule,
  toprule=-0.05pt, rightrule=-0.05pt, bottomrule=-0.05pt,
  breakable,
  enhanced,
  arc=0mm,
  before={\vspace{\EnvTheoremSimpleBeforeSpace}},
  after={\vspace{\EnvTheoremSimpleAfterSpace}},
  code={
  \ifdefempty{\tcbtitletext}
    {
    \tcbset{list text={ \FirstLetterUppercase{\EnvTheoremSimplePreTitle}  }}
    }
    {%% \tcbtitle is the title write by the user
    \tcbset{list text={#1}}
    }
  %
  \ifdefempty{\tcbtitletext}
    {
        \tcbset{before upper={\addtocounter{theoremCounter}{-1}\refstepcounter{theoremCounter}%
        \begin{minipage}{\EnvTheoremSimplePicWidth}
        \centering\EnvTheoremSimpleImage
        \end{minipage}% 
        \EnvTheoremSimplePostPic%
        \textcolor{\EnvTheoremSimpleTitleColor}{\EnvTheoremSimpleTitleFont\EnvTheoremSimplePreTitle\;\thetcbcounter:} \refstepcounter{theoremCounter}}}
    }
    {%% \tcbtitle is the title write by the user
        \tcbset{before upper={\addtocounter{theoremCounter}{-1}\refstepcounter{theoremCounter}%
        \begin{minipage}{\EnvTheoremSimplePicWidth}
        \centering\EnvTheoremSimpleImage
        \end{minipage}%
        \EnvTheoremSimplePostPic%
        \textcolor{\EnvTheoremSimpleTitleColor}{\EnvTheoremSimpleTitleFont\EnvTheoremSimplePreTitle\;\thetcbcounter\;- \tcbtitle:} \refstepcounter{theoremCounter}}}
    }
  },
}

