%% Function of
%% \FuncOf{f}{x} %% f(x)
\newcommand{\FuncOf}[2]{#1\left(#2\right)}

%% Min of function
%% \MinOf{x}{f(x)} %% min_x f(x)
\newcommand{\MinOf}[2]{{\operatorname*{min}_{#1} #2}}

%% Min of function
%% \MaxOf{x}{f(x)} %% min_x f(x)
\newcommand{\MaxOf}[2]{{\operatorname*{max}_{#1} #2}}

%% Argumento of min
%% \ArgMin{x}{f(x)} %% arg_x_min f(x)
\newcommand{\ArgMin}[2]{{\operatorname{arg}_{#1}\operatorname{min} #2}}

%% Argumento of min
%% \ArgMax{x}{f(x)} %% arg_x_max f(x)
\newcommand{\ArgMax}[2]{{\operatorname{arg}_{#1}\operatorname{max} #2}}

%% Definition of argumento of min
%% \ArgMinDef{x}{f} % 
\newcommand{\ArgMinDef}[2]{{ \ArgMin{#1}{\FuncOf{#2}{#1}} = \left\{#1 | \FuncOf{#2}{#1} = \MinOf{#1'}{\FuncOf{#2}{#1'}}\right\} }}

%% Definition of argumento of max
%% \ArgMaxDef{x}{f} % 
\newcommand{\ArgMaxDef}[2]{{ \ArgMax{#1}{\FuncOf{#2}{#1}} = \left\{#1 | \FuncOf{#2}{#1} = \MaxOf{#1'}{\FuncOf{#2}{#1'}}\right\} }}

%% Inner product
%% \EigenSet{A}{v}{a}
\newcommand{\EigenSet}[3]{{\left\{#2,#3| {#1}{#2}={#3}{#2} \right\}}}

%% Inner product
%% \InnerProd{x}{y}
\newcommand{\InnerProd}[2]{\langle #1, #2 \rangle }

%% Norm
%% \Norm{x} %% ||x||
\newcommand{\Norm}[1]{{\|#1\|}\;}

%% Cardinality
%% \Cardinality{x}
\newcommand{\Cardinality}[1]{{\operatorname{card}\left({#1}\right)}}

%% Diagonal function
%% \DiagFunc{x} %% diag(x)
\newcommand{\DiagFunc}[1]{{\operatorname{diag}\left({#1}\right)}}

%% Reverse function
%% \ReverseFunc{x} %% reverse(x)
\newcommand{\ReverseFunc}[1]{{\operatorname{reverse}\left({#1}\right)}}

%% Vectorize function
%% \VectFunc{x} %% vect(x)
\newcommand{\VectFunc}[1]{{\operatorname{vec}\left({#1}\right)}}

%% Vector
%% |Vector{x} %% x
\newcommand{\Vector}[1]{\mathbf{\lowercase{#1}}}
%\newcommand{\VECTOR}{\Vector}

%% Matrix
%% \Matrix{x} %% X
\newcommand{\Matrix}[1]{\mathbf{\uppercase{#1}}}
%\newcommand{\MATRIX}{\Matrix}

%% Derivada punto
%% \DtVector{x} %% X
\newcommand{\DtVector}[1]{\mathbf{\dot{\lowercase{#1}}}}
\newcommand{\DDtVector}[1]{\mathbf{\ddot{\lowercase{#1}}}}
%\newcommand{\DDDtVector}[1]{\mathbf{\dddot{\lowercase{#1}}}}

%% Derivada punto
%% \DtMatrix{x} %% X
\newcommand{\DtMatrix}[1]{\mathbf{\dot{\uppercase{#1}}}}
\newcommand{\DDtMatrix}[1]{\mathbf{\ddot{\uppercase{#1}}}}
%\newcommand{\DDDtMatrix}[1]{\mathbf{\dddot{\uppercase{#1}}}}

%% \DerPart{y}{x} %% 
\newcommand{\DPartial}[2]{\frac{\partial #1}{\partial #2}}
\newcommand{\DDPartial}[2]{\frac{\partial^{2} #1}{\partial {#2}^{2}}}
\newcommand{\DDPartialXY}[3]{\frac{\partial^{2} #1}{\partial {#2}\partial {#3}}}

%% \IsDefinedAs 
\newcommand{\IsDefinedAs}{\stackrel{\mathrm{def}}{=}}

%% \Floor{}
\newcommand{\Floor}[1]{{\lfloor #1 \rfloor}}

%% \Ceil{}
\newcommand{\Ceil}[1]{{\lceil #1 \rceil}}

%% \MathCircled{}
\makeatletter
\newcommand\MathCircled[1]{%
  \mathpalette\@MathCircled{#1}%
}
\newcommand\@MathCircled[2]{%
  \tikz[baseline=(math.base)] \node[draw,circle,inner sep=1pt] (math) {$\m@th#1#2$};%
}
\makeatother


%% Vectorize function
%% \SumFunc{x} %% sum(x)
\newcommand{\SumFunc}[1]{{\operatorname{sum}\left({#1}\right)}}


%% Triad dot product
%% \TriadDotProduct{a}{b}{c}
\newcommand\TriadDotProduct[3]{%
  \tikz[scale=0.07,baseline=-0.5ex]%
  {
  \path (-1.732,-1) node[anchor=east]      {$#1$}
        ( 1.732,-1) node[anchor=west]      {$#2$}
        (     0, 2) node[anchor=south]     {$#3$};
  \draw (-1.732,-1) to (1.732,-1) to (0,2) to (-1.732,-1);
  \filldraw  (0,0) circle (0.3);
  }%
} 

