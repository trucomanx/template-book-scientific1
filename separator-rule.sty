%-------------------------------------------------------------------------------
%	Horizontal separator line
%-------------------------------------------------------------------------------
%   \HRule{2pt}
%-------------------------------------------------------------------------------
\newcommand{\HRule}[1]{\noindent\rule{\linewidth}{#1}} % 



%-------------------------------------------------------------------------------
%	Horizontal separator line with text
%-------------------------------------------------------------------------------
%   \HTextRule{Text}
%-------------------------------------------------------------------------------
\newlength{\HTRLength}
\newcommand*\HTextRule[1]{%
\settowidth{\HTRLength}{#1}\advance\HTRLength by -\textwidth\divide\HTRLength by -2%
\noindent\makebox[\the\HTRLength]{\resizebox{\the\HTRLength}{1pt}{$\blacktriangleleft$}}%
\raisebox{-.5ex}{\textbf{#1}}%
\makebox[\the\HTRLength]{\resizebox{\the\HTRLength}{1pt}{$\blacktriangleright$}}%
\smallskip
}



